<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.Aperture.Camera.InfoChip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_chip_view_background"
    android:backgroundTint="#222222"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/lowBatteryImageView"
        style="@style/Theme.Aperture.Camera.InfoChip.ImageView"
        android:src="@drawable/ic_battery_1_bar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#EE5555" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/videoSettingsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/info_chip_view_background"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lowBatteryImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp">

        <ImageView
            android:id="@+id/videoImageView"
            style="@style/Theme.Aperture.Camera.InfoChip.ImageView"
            android:src="@drawable/ic_videocam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/videoSettingsTextView"
            style="@style/Theme.Aperture.Camera.InfoChip.TextView"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/videoImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/videoMicStatusImageView"
            style="@style/Theme.Aperture.Camera.InfoChip.ImageView"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_mic_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/videoSettingsTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
