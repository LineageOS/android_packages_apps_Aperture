<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/processing_title">

        <Preference
            app:icon="@drawable/ic_info"
            app:selectable="false"
            app:summary="@string/processing_info" />

        <ListPreference
            app:defaultValue="@string/config_processingEdge"
            app:entries="@array/edge_mode_entries"
            app:entryValues="@array/edge_mode_values"
            app:iconSpaceReserved="false"
            app:key="edge_mode"
            app:summary="@string/edge_mode_summary"
            app:title="@string/edge_mode_title" />

        <ListPreference
            app:defaultValue="@string/config_processingNoiseReduction"
            app:entries="@array/noise_reduction_mode_entries"
            app:entryValues="@array/noise_reduction_mode_values"
            app:iconSpaceReserved="false"
            app:key="noise_reduction_mode"
            app:summary="@string/noise_reduction_mode_summary"
            app:title="@string/noise_reduction_mode_title" />

        <ListPreference
            app:defaultValue="@string/config_processingShading"
            app:entries="@array/shading_mode_entries"
            app:entryValues="@array/shading_mode_values"
            app:iconSpaceReserved="false"
            app:key="shading_mode"
            app:summary="@string/shading_mode_summary"
            app:title="@string/shading_mode_title" />

        <ListPreference
            app:defaultValue="@string/config_processingColorCorrectionAberration"
            app:entries="@array/color_correction_aberration_mode_entries"
            app:entryValues="@array/color_correction_aberration_mode_values"
            app:iconSpaceReserved="false"
            app:key="color_correction_aberration_mode"
            app:summary="@string/color_correction_aberration_mode_summary"
            app:title="@string/color_correction_aberration_mode_title" />

        <ListPreference
            app:defaultValue="@string/config_processingDistortionCorrection"
            app:entries="@array/distortion_correction_mode_entries"
            app:entryValues="@array/distortion_correction_mode_values"
            app:iconSpaceReserved="false"
            app:key="distortion_correction_mode"
            app:summary="@string/distortion_correction_mode_summary"
            app:title="@string/distortion_correction_mode_title" />

        <ListPreference
            app:defaultValue="@string/config_processingHotPixel"
            app:entries="@array/hot_pixel_mode_entries"
            app:entryValues="@array/hot_pixel_mode_values"
            app:iconSpaceReserved="false"
            app:key="hot_pixel_mode"
            app:summary="@string/hot_pixel_mode_summary"
            app:title="@string/hot_pixel_mode_title" />

    </PreferenceCategory>

</PreferenceScreen>
